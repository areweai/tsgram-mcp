# Signal Configuration
SIGNAL_PHONE_NUMBER=+1234567890
SIGNAL_SOCKET_PATH=/signald/signald.sock

# AI Model Configuration
DISABLED_MODELS=
DEFAULT_MODEL=openai

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_API_BASE=https://api.openai.com/v1
OPENAI_MODEL=gpt-4-turbo

# OpenRouter Configuration
OPENROUTER_API_KEY=your_openrouter_api_key_here
OPENROUTER_API_BASE=https://openrouter.ai/api/v1
OPENROUTER_MODEL=anthropic/claude-3.5-sonnet

# Chat Configuration
MAX_HISTORY=5
MAX_TOKENS=1024

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_from_botfather
AUTHORIZED_USER=your_telegram_username
AUTHORIZED_CHAT_ID=your_telegram_chat_id
ALLOW_FILE_EDITS=false  # Set to true to allow file creation/editing

# MCP Server Configuration
MCP_SERVER_NAME=areweai-mcp
MCP_SERVER_VERSION=1.0.0
MCP_SERVER_PORT=3000

# Logging Configuration
LOG_LEVEL=info
DEBUG=false

# Development Configuration
NODE_ENV=development